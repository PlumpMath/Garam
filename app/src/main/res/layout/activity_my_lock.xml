<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="co.mitsuha.lockscreenlearn.MyLockActivity">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/mylockImageView"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/mylock" />
        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/passwordMenuSelectBtn"
                android:layout_marginTop="10dp"
                android:text="비밀번호"
                android:textColor="#FFF"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/shape_blue"
                android:onClick="passwordMenuClick"
                />
            <Button
                android:id="@+id/imageMenuSelectBtn"
                android:layout_marginTop="10dp"
                android:text="이미지"
                android:textColor="#FFF"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/shape_purple"
                android:onClick="imageMenuClick"
                />
            <Button
                android:id="@+id/engwordMenuSelectBtn"
                android:layout_marginTop="10dp"
                android:text="영단어"
                android:textColor="#FFF"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/shape_red"
                android:onClick="engwordMenuClick"
                />
        </LinearLayout>
    </LinearLayout>
</GridLayout>
